<h1>{{title}}</h1>
<div class="info">
    <h3>Coffee & Books</h3>
    <a href="/places/new">Create new place</a>
    <ul>
        {{#each places}}
        <li>
            <a href="/places/{{ this._id}}">{{ this.name}} (<em>{{this.type}}</em>)</a>
            |
            <a href="/places/{{ this._id}}/delete" class="btn">Delete</a>
        </li>
        {{/each }}
    </ul>

    <div id="map"></div>
</div>
